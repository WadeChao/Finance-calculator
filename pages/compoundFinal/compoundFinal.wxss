compound-final {
    width: 100;
}

.title-sec {
    width: 100%;
    height: 150rpx;
    position: relative;
    border: 1px solid #eee;
}

.title-sec .page-title {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  font-weight: bold;
}


.input-sec{
   width: 100%;
   height: 200rpx;
   position: relative;
   border: 1px solid #eee;
}

.input-sec .item-sec {
   width: 100%;
   height: 50%;
   position: relative;
   border-bottom: 1px solid #eee;
}

.input-sec .item-sec {
   width: 100%;
   height: 50%;
   position: relative;
   border-bottom: 1px solid #eee;
   display: flex;
   flex-direction: row;
}

.input-sec .item-sec .left-sec {
  position:relative;
  display:flex;
  flex:40%;
  align-items:center;
  justify-content:center;
}

.input-sec .item-sec .left-sec .name {
}

.input-sec .item-sec .right-sec {
   position: relative;
   display: flex;
   flex: 60%;
   align-items:center;
}

.input-sec .item-sec .right-sec .content {
   width: 100%;
   position: relative;
   display: block;
}

.input-sec .item-sec .right-sec .content .content-input {
  border:1px solid #eee;
  border-radius: 5rpx;
  display: inline-block;
  vertical-align: middle;
}

.input-sec .item-sec .right-sec .content .content-unit {
    display: inline-block;
    vertical-align: middle;
}

.calc-sec {
    width: 100%;
    height: 150rpx;
    position: relative;
    border: 1px solid #eee;
}
   
.calc-sec .calc-button{
  position:absolute;
  top:50%;
  left:50%;
  transform:translate(-50%, -50%);
  width:80%;
  height:75rpx;
  display:flex;
  align-items:center;
  justify-content:center;
}

.result-sec {
    width: 100%;
    height: 100rpx;
    position: relative;
    border: 1px solid #eee;
    display: flex;
    flex-direction: row;
}
   
.result-sec .left-sec {
  position:relative;
  display:flex;
  flex:40%;
  align-items:center;
  justify-content:center;
}

.result-sec .right-sec {
  position:relative;
  display:flex;
  flex:60%;
}
